#!/bin/sh

case `/usr/bin/uname -s` in
    Darwin)
        if [ -e /opt/local/bin/gsed ]; then
                exec "/opt/local/bin/gsed" "$@"
        elif [ -e /sw/bin/gsed ]; then
                exec "/sw/bin/gsed" "$@"
        else
                exec "gsed" "$@"
        fi
        ;;
    Linux)
        exec "/bin/sed" "$@"
        ;;
esac
