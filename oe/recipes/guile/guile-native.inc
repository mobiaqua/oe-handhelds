SECTION = "unknown"
LICENSE = "LGPLv2.1"
DEPENDS = "gmp-native gettext-native libtool-native"

inherit autotools native

do_configure_append() {
        find ${S} -name Makefile | xargs sed -i s:'-Werror':'':g
}

do_configure_prepend() {
	#MobiAqua: on mac os x with llvm compiler use clang instead
	if gcc --version | grep llvm-gcc > /dev/null ; then
		export CC=clang
	fi
}
